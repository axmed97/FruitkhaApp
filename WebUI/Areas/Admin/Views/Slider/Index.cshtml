@using System.Globalization
@model List<Slider>

<a href="/admin/slider/create" class="btn btn-dark">Create</a>

<table class="table table-dark table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Images</th>
            <th>Created Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Slider item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <img src="@item.PhotoPath" width="200" alt="Alternate Text" />
                </td>
                <td>
                    @item.CreatedDate.ToString("dd/MMMM/yyyy", new CultureInfo("az"))
                </td>
                <th>
                    <a href="/admin/slider/edit/@item.Id" class="btn btn-warning">Edit</a>
                    @* <a href="/admin/slider/delete/@item.Id" class="btn btn-danger">Delete</a> *@
                    <a asp-area="Admin" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </th>
            </tr>
        }
    </tbody>
</table>