@model Product

@* Validation *@
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PhotoPath" />
    <input type="hidden" asp-for="CreatedDate" />
    <div class="from-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" min="0.00" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Discount"></label>
        <input type="text" asp-for="Discount" min="0.00" step="0.01" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Expires"></label>
        <input type="date" asp-for="Expires" class="form-control" />
        <span asp-validation-for="Expires" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Count"></label>
        <input type="number" asp-for="Count" class="form-control" />
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="category">Category</label>
        <select multiple class="form-control" id="category" name="categories">
            @foreach (var item in ViewBag.Categories as List<Category>)
            {
                if(Model.ProductCategories.Select(x => x.CategoryId).Contains(item.Id))
                {
                    <option selected value="@item.Id">@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                    
                }
            }
        </select>
    </div>
    <div class="form-group">
        <input type="file" accept="image/*" value="Photo" name="file" class="form-control" />
    </div>
    <div class="form-group">
        <img src="@Model.PhotoPath" width="200" alt="" />
    </div>
    <input type="submit" value="Update" class="btn btn-dark" />
</form>