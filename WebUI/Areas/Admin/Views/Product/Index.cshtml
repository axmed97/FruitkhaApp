@model List<Product>

<a href="/admin/product/create" class="btn btn-dark">Create</a>


<table class="table table-bordered table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Category</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@(item.Discount == null ? 0 : item.Discount)</td>
                <td>
                    @foreach (var category in item.ProductCategories)
                    {
                        <span>@category.Category.Name /</span> 
                    }
                </td>
                <td>
                    <img src="@item.PhotoPath" width="200" alt="" />
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>